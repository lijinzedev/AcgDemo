<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="QMuiAppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="qmui_config_color_blue">@color/sred</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#008577</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="toolbarStyle">@style/CustomToolbar</item>
    </style>
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--底部导航引用颜色值-->
        <item name="colorPrimary">#FF69B4</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="toolbarStyle">@style/CustomToolbar</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >


    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性边距为0dp-->
        <item name="contentInsetLeft">0dp</item>
    </style>
    <style name="DialogIOS" parent="@android:style/Theme.DeviceDefault.Light.Dialog.NoActionBar.MinWidth">
        <item name="layout">@layout/dialog_choosepage</item>
        <item name="android:windowBackground">@drawable/view_sharp</item>
    </style>
    <style name="RoundButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:textColor">#ccffffff</item>
    </style>
</resources>
